package minedeath.world;

import java.util.ArrayList;

import org.bukkit.block.Block;
import org.bukkit.block.Sign;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.block.Action;
import org.bukkit.event.player.PlayerInteractEvent;

import lang.Lang;

public class WorldMain implements Listener{
	Block block;
	Sign sign;
	private static void print(String arg){
		Lang.print(arg);
	}
	@EventHandler
	public void onIntereact(PlayerInteractEvent e){
		block = e.getClickedBlock();
		if(e.getAction().equals(Action.LEFT_CLICK_BLOCK)){
			return;
		}
		if(block.getState() instanceof Sign){
			sign = (Sign) e.getClickedBlock().getState();
			readSign(sign); 
		}
	}
	public void readSign(Sign sign){
		ArrayList<String> signtext = new ArrayList<String>();
		for (String text : sign.getLines()){
			if(!text.matches("")){
				signtext.add(text);	
			}
			
		}
		print(parseSign(signtext));
		return;
	}
	private String parseSign(ArrayList<String> list){
		return list.toString();
	}
}
