package lang;
import org.bukkit.Bukkit;
import org.bukkit.command.CommandSender;

import net.md_5.bungee.api.ChatColor;

public class Lang {
	private enum Status{INFO, SEVERE};
	private ChatColor Status(Status status){
		if(status == Status.INFO){
			return ChatColor.YELLOW;
		}
		else if(status == Status.SEVERE){
			return ChatColor.RED;
		}
		else{ 
			return ChatColor.GREEN;
		}
	}
	private Lang(){}
	private static Lang instance = new Lang();
	public static Lang getInstance(){
		return instance;
	}
	private void sendMessage(CommandSender src, String message, Status status){
		src.sendMessage(checkStatus message);
	}
	public static void print(String arg, Status status){
		Bukkit.getServer().getConsoleSender().sendMessage(arg);
	}
	
}
