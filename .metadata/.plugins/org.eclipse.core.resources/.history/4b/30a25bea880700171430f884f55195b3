package lang;
import org.bukkit.Bukkit;
import org.bukkit.command.CommandSender;

public class Lang {
	private Lang(){}
	private static Lang instance = new Lang();
	public static Lang getInstance(){
		return instance;
	}
	private void msg(CommandSender src, ChatColor color, String msg){
		src.sendMessage(color + msg);
	}
	public static void print(String arg){
		Bukkit.getServer().getConsoleSender().sendMessage(arg);
	}
}
