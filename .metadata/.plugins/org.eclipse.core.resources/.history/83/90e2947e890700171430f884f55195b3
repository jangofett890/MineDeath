package lang;
import org.bukkit.Bukkit;
import org.bukkit.command.CommandSender;

import net.md_5.bungee.api.ChatColor;

public class Lang {
	private enum Status{INFO, SEVERE, COMPLETE};
	private Lang(){}
	private static Lang instance = new Lang();
	public static Lang getInstance(){
		return instance;
	}
	public void info(CommandSender src, String msg){
		msg(src, ChatColor.YELLOW, msg);
	}
	public void severe(CommandSender src, String msg){
		msg(src, ChatColor.RED, msg);
	}
	public void complete(CommandSender src, String msg){
		msg(src, ChatColor.GREEN, msg);
	}
	private void msg(CommandSender src, ChatColor color, String msg){
		src.sendMessage(color + msg);
	}
	public static void print(String arg, Status status){
		Bukkit.getServer().getConsoleSender().sendMessage(arg);
	}
}
